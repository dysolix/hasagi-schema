{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "node",

        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitOverride": true,

        "strict": true,

        "declaration": true,
        "allowJs": true,

        "outDir": "dist",

        "forceConsistentCasingInFileNames": true,

        "allowSyntheticDefaultImports": true,
    },
    "include": [ "./src" ]
}